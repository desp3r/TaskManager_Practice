<Page x:Class="TaskManager_Practice.Views.Windows.ProjectsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TaskManager_Practice.Views.Windows" 
      xmlns:viewmodels="clr-namespace:TaskManager_Practice.ViewModels" 
      d:DataContext="{d:DesignInstance Type=viewmodels:MainWindowViewModel}"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Page2">
    <Grid>
        <GroupBox Header="Projects">
            <ListBox ItemsSource="{Binding Projects}" DisplayMemberPath="Name"
                     SelectedItem="{Binding SelectedProject}"/>
        </GroupBox>
    </Grid>
</Page>
