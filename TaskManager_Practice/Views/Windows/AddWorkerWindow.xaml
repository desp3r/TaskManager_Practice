<Window x:Class="TaskManager_Practice.Views.Windows.AddWorkerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:TaskManager_Practice.Views.Windows"
        mc:Ignorable="d"
        Title="AddWorkerWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        
        <StackPanel Orientation="Vertical">
            <TextBox x:Name="workerName"></TextBox>
            <TextBox x:Name="workerSurname"></TextBox>
            <Button Content="Add" Click="AddWorkerClick"></Button>
        </StackPanel>
        
        
    </Grid>
</Window>
