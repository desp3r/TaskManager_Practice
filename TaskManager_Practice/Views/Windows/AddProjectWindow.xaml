<Window x:Class="TaskManager_Practice.Views.Windows.AddProjectWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TaskManager_Practice.Views.Windows"
        mc:Ignorable="d"
        Title="AddProjectWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        
        <StackPanel Orientation="Vertical">
            <TextBox x:Name="infoName"></TextBox>
            <TextBox x:Name="infoDeadline"></TextBox>
            <TextBox x:Name="info"></TextBox>
        </StackPanel>
        
        <DataGrid Grid.Row="1"
                  x:Name="DataGridWorkers"
                  IsReadOnly="True"
                  SelectionChanged="DataGridWorkers_OnSelectionChanged">
            
        </DataGrid>
    </Grid>
</Window>
