<Page x:Class="TaskManager_Practice.Views.Pages.WorkersPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TaskManager_Practice.Views.Windows"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Page1">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <Rectangle Grid.Row="0" Fill="DarkCyan"/>
        
        <StackPanel Grid.Row="0"
                    Orientation="Horizontal"
                    HorizontalAlignment="Left">
            
            <TextBox x:Name="FindBySurnameWorker"
                     Margin="5,10,0,10"
                     Style="{StaticResource MaterialDesignTextBoxBase}"
                     BorderBrush="Beige"
                     MinWidth="200"
                     Foreground="Beige"
                     SelectionBrush="Beige"
                     FontSize="14"/>
            
            <RadioButton Content="Find" 
                         Style="{StaticResource MaterialDesignOutlinedButton}" 
                         BorderBrush="Beige" Foreground="Beige" 
                         Click="FindBySurname"
                         Margin="5,10,0,10"/>
            
        </StackPanel>
        
        
        <DataGrid Grid.Row="1" Margin="0 10"
                  IsReadOnly="True"
                  x:Name="WorkersGrid"
                  SelectionChanged="WorkersGrid_OnSelectionChanged"
        />
         
        <Rectangle Grid.Row="2" Fill="DarkCyan"/>
        
        <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Grid.Row="2" 
                    Margin="1">
            
            <RadioButton Content="Show Tasks" 
                         Style="{StaticResource MaterialDesignOutlinedButton}" 
                         BorderBrush="Beige" Foreground="Beige" 
                         Click="WorkerShowTasks"
                         Margin="5,10,0,10"/>
                
            <RadioButton Content="Add" 
                         Style="{StaticResource MaterialDesignOutlinedButton}" 
                         BorderBrush="Beige" Foreground="Beige" 
                         Click="AddWorkerClick"
                         Margin="5,10,0,10"/>
                
            <RadioButton Content="Edit" 
                         Style="{StaticResource MaterialDesignOutlinedButton}" 
                         BorderBrush="Beige" Foreground="Beige" 
                         Click="EditWorkerClick"
                         Margin="5,10,0,10"/>
                
            <RadioButton Content="Remove" 
                         Style="{StaticResource MaterialDesignOutlinedButton}" 
                         BorderBrush="Beige" Foreground="Beige" 
                         Click="RemoveWorkerClick"
                         Margin="5,10,0,10"/>
                
            <RadioButton Content="Remove All" 
                         Style="{StaticResource MaterialDesignOutlinedButton}" 
                         BorderBrush="Beige" Foreground="Beige" 
                         Click="RemoveAllClick"
                         Margin="5,10,0,10"/>
            
        </StackPanel>
        
        </Grid>
</Page>
